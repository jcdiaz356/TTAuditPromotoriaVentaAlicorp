<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    tool:contetext=".Encuesta"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:weightSum="1"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="visible"
            android:id="@+id/lyPermitio">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStock"
                    android:text="Â¿ Esta Abierto el local? ?"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSeEncuentra"
                    android:layout_marginTop="1dip"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:id="@+id/swSiNo"
                    android:text=""
                    android:textOn="@string/sw_si"
                    android:textOff="@string/sw_no"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="visible"
                    android:id="@+id/lyOpciones">

                    <RadioGroup
                        android:id="@+id/rgOpt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_above="@+id/fbplacename"
                        android:visibility="visible"
                        android:clickable="true">

                        <RadioButton
                            android:id="@+id/rbA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="a"
                            android:text="Local no existe" />

                        <RadioButton
                            android:id="@+id/rbB"
                            android:layout_width="wrap_content"
                            android:tag="b"
                            android:layout_height="wrap_content"
                            android:text="Local cerrado"
                            android:enabled="true" />

                        <RadioButton
                            android:id="@+id/rbC"
                            android:layout_width="wrap_content"
                            android:tag="c"
                            android:layout_height="wrap_content"
                            android:text="Cambio de giro"
                            android:enabled="true" />
                        <RadioButton
                            android:id="@+id/rbD"
                            android:layout_width="wrap_content"
                            android:tag="d"
                            android:layout_height="wrap_content"
                            android:text="Otros" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:inputType="textMultiLine"
                            android:ems="10"
                            android:enabled="true"
                            android:visibility="invisible"
                            style="@style/TextLogin"
                            android:lines="10"
                            android:scrollHorizontally="false"
                            android:scrollbars="vertical"
                            android:textSize="15sp"
                            android:id="@+id/etComent" />
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <Button
                        android:id="@+id/btPhoto"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableBottom="@drawable/ic_photo"
                        android:layout_below="@+id/widget110"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>





        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="56dp">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GUARDAR ENCUESTA"
                android:id="@+id/btGuardar"
                android:drawableRight="@drawable/ic_sync"
                style="@style/BottonBase" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>


